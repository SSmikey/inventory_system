{
  "version": 2,
  "builds": [
    {
      "src": "inventory_system/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "inventory_system/wsgi.py" }
  ],
  "env": {
    "PYTHONPATH": "."
  }
}